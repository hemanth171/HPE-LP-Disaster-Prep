<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow"/>
            <corners android:radius="@dimen/button_corner"/>
        </shape>
    </item>
    <item
        android:left="0dp"
        android:right="2dp"
        android:top="0dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="@dimen/button_corner" />
        </shape>
    </item>
    <item android:width="4dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/blue1"/>
            <corners android:topLeftRadius="@dimen/hint_corner" android:bottomLeftRadius="@dimen/hint_corner" />
        </shape>
    </item>
</layer-list>