<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/page_title"
            style="@style/Font.Header2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey1"
            android:padding="@dimen/margin_small"
            android:text="Essentials of operation"/>

        <TextView
            style="@style/Font.Body3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_small"
            android:text="Knowing what is essential to keep your business going and hoe to get it is the core of a business continuity plan.\n\nWhat are the key processes, products and/or services which are fundamental to the survival of your business? what can't your business survive without?"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/grey1"/>

        <TextView
            style="@style/Font.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_small"
            android:text="Key Processes/products/services:"/>

        <EditText
            style="@style/Font.SubHeader1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="@dimen/margin_small"
            android:background="@color/white"
            android:gravity="top"
            android:hint="Type here..."
            android:inputType="textMultiLine"
            android:padding="@dimen/margin_small"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/grey1"/>

        <TextView
            style="@style/Font.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_small"
            android:text="Key Resources:"/>

        <EditText
            style="@style/Font.SubHeader1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="@dimen/margin_small"
            android:background="@color/white"
            android:gravity="top"
            android:hint="Type here..."
            android:inputType="textMultiLine"
            android:padding="@dimen/margin_small"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginTop="@dimen/margin_small"
            android:background="@color/grey1"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/Font.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_small"
                    android:text="Get some key staff together for a morning tea and identify the core processes, products and/or services that will help keep your business operating."/>

                <TextView
                    style="@style/Font.Body3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey2"
                    android:padding="@dimen/margin_small"
                    android:text="Discuss what resources are needed to achieve core operations (people, premises, technology, suppliers and reputation) and how you could get any that are missing or damaged. Lastly, consider how long might it take to obtain what is needed."/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>