<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey2"
            android:orientation="vertical">

            <include layout="@layout/view_gradient"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/margin_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Font.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/activity_vertical_margin"
                        android:text="Mattis augue sit amet velit elementum at mollis mauris ipsum dolor sit amet?"
                        android:textColor="@color/blue2"/>

                    <com.topcoder.disasterprep.assessment.GradeSeekView
                        android:id="@+id/seek1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/grey2"
                        android:paddingBottom="@dimen/margin_small"
                        android:paddingTop="@dimen/margin_small"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/margin_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Font.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/activity_vertical_margin"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit?"
                        android:textColor="@color/blue2"/>

                    <com.topcoder.disasterprep.assessment.GradeSeekView
                        android:id="@+id/seek2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/grey2"
                        android:paddingBottom="@dimen/margin_small"
                        android:paddingTop="@dimen/margin_small"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/margin_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Font.Body1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/activity_vertical_margin"
                        android:text="Fusce mattis augue sit amet velit elementum atmollis mauris hendrerit?"
                        android:textColor="@color/blue2"/>

                    <com.topcoder.disasterprep.assessment.GradeSeekView
                        android:id="@+id/seek3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/grey2"
                        android:paddingBottom="@dimen/margin_small"
                        android:paddingTop="@dimen/margin_small"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <TextView
        android:id="@+id/result"
        style="@style/Font.SubHeader2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue5"
        android:drawablePadding="@dimen/margin_small"
        android:drawableRight="@drawable/asses_result_bg"
        android:gravity="center_vertical|end"
        android:paddingBottom="@dimen/margin_small"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/margin_small"
        android:text="Result"/>
</LinearLayout>