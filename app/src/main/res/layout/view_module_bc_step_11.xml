<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey1"
            android:orientation="horizontal"
            android:padding="@dimen/margin_small">

            <TextView
                android:id="@+id/page_title"
                style="@style/Font.Header2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reality Check"/>

            <TextView
                style="@style/Font.Header2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="View Plan"
                android:textColor="@color/blue1"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/module_bc_11_bg">

            <TextView
                style="@style/Font.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:alpha="0.8"
                android:background="@color/blue2"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingEnd="@dimen/activity_vertical_margin"
                android:paddingStart="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="You now have the basics of a plan!"
                android:textColor="@color/white"/>
        </FrameLayout>

        <TextView
            style="@style/Font.Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Take a step back: does this all sound doable?"/>

        <TextView
            style="@style/Font.Body3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/margin_small"
            android:text="Are you happy with your answers in terms of the resources and time frame involved? If not, you may want to consider investigating in mitigation or some more advanced planning. We'll be covering that in Level 2."/>

        <android.support.v7.widget.CardView
            style="@style/margins.all">

            <TextView
                style="@style/Font.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small"
                android:text="Send me back! I'd like to have another crack at determining those key proceses, resources and ways that we could restore these."
                android:textColor="@color/blue1"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/margins.all">

            <TextView
                style="@style/Font.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small"
                android:text="I'm looking forward to developing these ideas further in Level 2"
                android:textColor="@color/blue1"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/margins.all">

            <TextView
                style="@style/Font.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_small"
                android:text="I'm really happy with my ideas for key processes, resources and ways to restore them"
                android:textColor="@color/blue1"/>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>